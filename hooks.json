[
  {
    "id": "remediar-servidor",
    "execute-command": "/usr/bin/ansible-playbook",
    "command-working-directory": "/opt/ansible_playbooks",
    "pass-arguments-to-command": [
      {
        "source": "string",
        "name": "remediate_server.yml"
      },
      {
        "source": "string",
        "name": "--extra-vars"
      },
      {
        "source": "string",
        "name": "remediation_type={{.payload.commonLabels.remediation}} alert_instance={{.payload.alerts.0.labels.instance}}"
      }
    ],
    "pass-environment-to-command": [
      {
        "source": "payload",
        "envname": "ALERT_PAYLOAD"
      }
    ]
  }
]
